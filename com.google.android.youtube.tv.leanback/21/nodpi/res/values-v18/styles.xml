<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetAcceptButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_marginStart">@dimen/bottom_sheet_padding_bottom</item>
    </style>
    <style name="BottomSheetButtonsContainer">
        <item name="android:gravity">end</item>
    </style>
    <style name="BottomSheetDialogContentWrapper">
        <item name="android:paddingEnd">@dimen/bottom_sheet_dialog_margin</item>
    </style>
    <style name="BottomSheetDialogMessageText">
        <item name="android:gravity">start</item>
    </style>
    <style name="BottomSheetDialogTitleText">
        <item name="android:gravity">start</item>
    </style>
    <style name="Theme.LeanbackBase" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowOverscan">true</item>
        <item name="guidedStepTheme">@style/Theme.Leanback.GuidedStep</item>
        <item name="defaultBrandColor">@color/lb_default_brand_color</item>
        <item name="defaultBrandColorDark">@color/lb_default_brand_color_dark</item>
        <item name="playbackProgressPrimaryColor">@color/lb_playback_progress_color_no_theme</item>
        <item name="playbackControlsIconHighlightColor">@color/lb_playback_icon_highlight_no_theme</item>
    </style>
</resources>
