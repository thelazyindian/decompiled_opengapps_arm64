            <TextView android:textSize="@dimen/title_bar_text_size" android:textColor="#ffffffff" android:id="@id/agent_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/agent_name" android:singleLine="true" android:layout_toRightOf="@id/agent_icon" android:fontFamily="@string/canvas_font_family" android:layout_marginStart="@dimen/agent_name_margin_start" android:layout_toStartOf="@id/close_button" android:layout_toEndOf="@id/agent_icon" />
