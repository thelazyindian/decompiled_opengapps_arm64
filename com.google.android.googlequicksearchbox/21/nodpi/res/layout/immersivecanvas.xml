        </FrameLayout>
        <RelativeLayout android:layout_gravity="bottom|center|left" android:id="@id/type_container" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <View android:id="@id/mic_plate_separator" android:background="@color/mic_plate_separator" android:layout_width="fill_parent" android:layout_height="@dimen/canvas_mic_plate_separator_height" />
            <LinearLayout android:orientation="horizontal" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="@dimen/mic_plate_height" android:layout_below="@id/mic_plate_separator">
                <com.google.android.apps.gsa.staticplugins.opa.ui.OpaEditText android:textColor="@android:color/black" android:textColorHint="@color/input_text_hint" android:gravity="center_vertical" android:id="@id/input_text" android:background="@android:color/transparent" android:paddingLeft="@dimen/input_text_left_margin" android:layout_width="0.0dip" android:layout_height="fill_parent" android:hint="@string/opa_text_input_hint" android:layout_weight="1.0" android:imeOptions="actionSend" />
